---
layout: layouts/base.liquid
---
{% assign myArray = page.url | split: '/' | reverse %}
{% assign parent = myArray[2] %}
{% if parent == '' %}
    {% assign parent = 'home' %}
{% endif %}
<h1><a href="/{% if parent != 'home' %}{{ parent }}{% endif %}">{{ parent }}</a>/{{ title }}</h1>
{{ content | safe }}
{% if parent != 'home' %}
<div id="back">
    <a href="/{{ parent }}">&lt; more {{ parent }}</a>
</div>
{% endif %}

{% extends "layouts/pagewrap.njk" %}

{% block content %}
  {{ super() }}
  {{ content | safe }}
<div class="gallery full-bleed">
{% for page in collections[cat] | sortByUpdated %}
  <figure class="galleryItem">
    <a href="{{ page.url }}"><img src="{{ page.url}}/{{ page.data.thumbnail }}"></a>
  <figcaption><a href="{{ page.url }}">{{ page.data.title }}</a> <span class="publish-date">(published {{ page.date | utcDate('YYYY-MM-DD') }}{% if page.data.updated %}, updated {{ page.data.updated | utcDate('YYYY-MM-DD') }}{% endif %})</span></figcaption>
  </figure>
{% endfor %}
</div>
{% endblock %}
